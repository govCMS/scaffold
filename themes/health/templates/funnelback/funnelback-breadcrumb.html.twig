{#
/**
 * @file
 * Funnelback breadcrumb template.
 *
 * Available variables:
 * - facets: An array of facet items. Each item contains related selection
 *   details and urls.
 * - facet_extras: A array of extra information about facets.
 * - selected: Boolean to indicate if any facet filter is selected.
 */
#}
{% if selected %}
  <div class="health-listing__filters health-listing__filters--inline field">
    <label class="field__label" for="funnelback-selected-filters">Filters applied:</label>
    <ul class="au-tags" id="funnelback-selected-filters">
      {% for facet in facets %}
        {% if facet.selectedValues %}
          {% for selectedValue in facet.selectedValues %}
            <li>
              <a class="selected-filter" href="{{ selectedValue.toggleUrl }}" title="Remove {{ selectedValue.label }}">
                {{ selectedValue.label }}
                <span class="svg-inline--fa fa-fw"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm121.6 313.1c4.7 4.7 4.7 12.3 0 17L338 377.6c-4.7 4.7-12.3 4.7-17 0L256 312l-65.1 65.6c-4.7 4.7-12.3 4.7-17 0L134.4 338c-4.7-4.7-4.7-12.3 0-17l65.6-65-65.6-65.1c-4.7-4.7-4.7-12.3 0-17l39.6-39.6c4.7-4.7 12.3-4.7 17 0l65 65.7 65.1-65.6c4.7-4.7 12.3-4.7 17 0l39.6 39.6c4.7 4.7 4.7 12.3 0 17L312 256l65.6 65.1z"></path></svg></span>
              </a>
            </li>
          {% endfor %}
        {% endif %}
      {% endfor %}
    </ul>
    <a class="clear-all-filters" href="{{ facet_extras.unselectAllFacetsUrl }}" title="Remove all refinements">
      Clear all filters
    </a>
  </div>
{% endif %}
